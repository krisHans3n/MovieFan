<% if @merch.any? %>
  <% @merch.each do |item| %>
    <p><%= item.merchandises.name %> | <%= link_to "Delete", merchorders_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Price: <%= number_to_currency item.merchandises.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.merchandises.price * item.quantity) %></p>
  <% end %>
  <p>Total <%= number_to_currency cart_order.total_price %></p>
<% else %>
  <p>Your cart is empty</p>
<% end %>